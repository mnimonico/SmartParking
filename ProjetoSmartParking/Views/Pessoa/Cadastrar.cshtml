@model ProjetoSmartParking.Models.Pessoa

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>


@using (Html.BeginForm("Cadastrar", "Pessoa", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div id="Nome" class="form-group">
            @Html.LabelFor(model => model.Nome, new { @class = "control-label col-sm-2" })
            @*@Html.Label("Nome", new { @class = "control-label col-sm-2" })*@
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @placeholder = "Digite seu nome e sobrenome" })
                @Html.ValidationMessageFor(model => model.Nome,
         null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cpf, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Cpf, new { @class = "form-control", @placeholder = "Digite seu CPF" })
                @Html.ValidationMessageFor(model => model.Cpf,
         null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataNascimento, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.DataNascimento, new { @class = "form-control", @placeholder = "Digite sua data de nascimento" })
                @Html.ValidationMessageFor(model => model.DataNascimento,
         null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Login, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Login, new { @class = "form-control", @placeholder = "Digite seu nome de usuario" })
                @Html.ValidationMessageFor(model => model.Login,
         null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Senha, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.PasswordFor(model => model.Senha, new { @class = "form-control", @placeholder = "Digite uma senha" })
                @Html.ValidationMessageFor(model => model.Senha,
         null, new { @class = "text-danger" })
            </div>
        </div>

        <fieldset>
            <legend>Gênero</legend>

            <div class="col-md-offset-2 col-md-10">

                @Html.RadioButtonFor(model => model.Sexo, "Masculino") Masculino
                @Html.ValidationMessageFor(model => model.Sexo,
         null, new { @class = "text-danger" })
                @Html.RadioButtonFor(model => model.Sexo, "Feminino") Feminino
                @Html.ValidationMessageFor(model => model.Sexo,
         null, new { @class = "text-danger" })
            </div>
       
    </fieldset>





        <fieldset>
            <legend>Tipo de acesso</legend>
            <div class="col-md-offset-2 col-md-10">
                @Html.RadioButtonFor(model => model.TipoDeAcesso, "Cliente") Cliente
                @Html.ValidationMessageFor(model => model.TipoDeAcesso,
         null, new { @class = "text-danger" })
                @Html.RadioButtonFor(model => model.TipoDeAcesso, "Administrador") Administrador
                @Html.ValidationMessageFor(model => model.TipoDeAcesso,
         null, new { @class = "text-danger" })
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Cadastrar" class="btn btn-default" />
                </div>
            </div>
        </fieldset>
        </div>
}

<div>
    @Html.ActionLink("Voltar para o início", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
