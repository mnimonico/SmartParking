@model IEnumerable<ProjetoSmartParking.Models.FormaDePagamento>

@{
    ViewBag.Title = "Index";
}

<h2>Smart Parking</h2>

<p>
    @Html.ActionLink("Cadastrar", "Cadastrar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
       
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.FormaDePagamentoId }) |
            @Html.ActionLink("Detalhes", "Detalhes", new { id=item.FormaDePagamentoId }) |
            @Html.ActionLink("Remover", "Remover", new { id=item.FormaDePagamentoId })
        </td>
    </tr>
}

</table>
