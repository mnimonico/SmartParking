@model ProjetoSmartParking.Models.Carro

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar Carro</h2>


@using (Html.BeginForm("Cadastrar", "Carro", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
